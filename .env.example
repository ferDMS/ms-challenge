#######################
# Azure Container Registry and Instance Services
#######################
# Azure subscription ID
AZURE_SUBSCRIPTION_ID=12345678-abcd-1234-efgh-1234567890ab

# Azure resource group name
AZURE_RESOURCE_GROUP=ms-challenge-rg

# Azure region/location
AZURE_LOCATION=eastus

# Azure Container Registry login server
REGISTRY_LOGIN_SERVER=myregistry.azurecr.io

# Azure Container Registry username
REGISTRY_USERNAME=myregistryuser

# Azure Container Registry password
REGISTRY_PASSWORD=myRegistryP@ssw0rd

# Resource group (if different from above)
RESOURCE_GROUP=ms-challenge-rg

#######################
# Azure Speech Services
#######################

# API key for Azure Speech Services  
AZURE_SPEECH_KEY=your_speech_key

AZURE_SPEECH_ENDPOINT=https://eastus.stt.speech.microsoft.com

# Region for Azure Speech Services
AZURE_SPEECH_REGION=eastus

#######################
# Azure Cognitive Language Services
#######################

# API key for Azure Cognitive Language
AZURE_LANGUAGE_KEY=your_language_key

# Endpoint for Azure Cognitive Language
AZURE_LANGUAGE_ENDPOINT=https://your-language-service.cognitiveservices.azure.com/

#######################
# Language Configuration
#######################

# Language for sentiment analysis and conversation analysis (ISO 639-1 code)
LANGUAGE=en

# Locale for batch transcription of audio
LOCALE=en-US

#######################
# Input/Output Configuration
#######################

# Input audio URL or path
INPUT_URL=https://example.com/audio.wav

# Output file for phrase list and conversation summary
OUTPUT_FILE=output.txt

# Use stereo audio format (true/false)
USE_STEREO=false
