#######################
# Core Configuration
#######################

# Environment name (development, staging, production)
NODE_ENV=development

# Port for the application to listen on
PORT=3000

#######################
# Azure OpenAI Configuration
#######################

# Endpoint for Azure OpenAI resource
AZURE_OPENAI_API_ENDPOINT=https://your-openai-resource.openai.azure.com/

# API key for Azure OpenAI
AZURE_OPENAI_API_KEY=your_openai_api_key

# Deployment name for the chat model
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-35-turbo

# Deployment name for embeddings model
AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT_NAME=text-embedding-ada-002

# API version to use
AZURE_OPENAI_API_VERSION=2023-05-15

#######################
# Azure Search Configuration
#######################

# Endpoint for Azure Cognitive Search
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net

# API key for Azure Cognitive Search
AZURE_SEARCH_KEY=your-search-api-key

# Index name in Azure Cognitive Search
AZURE_SEARCH_INDEX=your-search-index-name

#######################
# Azure Document Intelligence (formerly Form Recognizer)
#######################

# Endpoint for Azure Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# API key for Azure Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_document_intelligence_key

#######################
# Azure Speech Services
#######################

# Endpoint for Azure Speech Services
AZURE_SPEECH_ENDPOINT=https://your-speech-service.cognitiveservices.azure.com/

# API key for Azure Speech Services  
AZURE_SPEECH_KEY=your_speech_key

# Region for Azure Speech Services
AZURE_SPEECH_REGION=eastus

#######################
# Optional: Azure Blob Storage (for document storage)
#######################

# Connection string for Azure Storage account
AZURE_STORAGE_ACCOUNT_CONNECTION_STRING=your-storage-connection-string

# Container name for document storage
AZURE_STORAGE_CONTAINER=documents

#######################
# Security Configuration
#######################

# Authentication settings (if applicable)
AUTH_ENABLED=false
# AUTH_CLIENT_ID=your-client-id
# AUTH_CLIENT_SECRET=your-client-secret
# AUTH_TENANT_ID=your-tenant-id

#######################
# Application Features
#######################

# Enable or disable specific features
ENABLE_CHAT_HISTORY=true
ENABLE_DOCUMENT_UPLOAD=false
ENABLE_SPEECH_TO_TEXT=false
