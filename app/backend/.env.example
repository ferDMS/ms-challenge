#######################
# Azure Container Registry and Instance Services
#######################
# Azure subscription ID
AZURE_SUBSCRIPTION_ID=<your-subscription-id>

# Azure resource group name
AZURE_RESOURCE_GROUP=<your-resource-group-name>

# Azure region/location
AZURE_LOCATION=<your-region>

# Azure Container Registry login server
REGISTRY_LOGIN_SERVER=<your-registry-server>

# Azure Container Registry username
REGISTRY_USERNAME=<your-registry-username>

# Azure Container Registry password
REGISTRY_PASSWORD=<your-registry-password>

# Resource group (if different from above)
RESOURCE_GROUP=<your-resource-group-name>

#######################
# Azure AI Services
#######################

# API key for Azure AI Services  
AZURE_AI_KEY=you_ai_services_key

AZURE_SPEECH_ENDPOINT=https://your-language-service.cognitiveservices.azure.com/

AZURE_LANGUAGE_ENDPOINT=https://your-language-service.cognitiveservices.azure.com/

#######################
# Language Configuration
#######################

# Language for sentiment analysis and conversation analysis (ISO 639-1 code)
LANGUAGE=en

# Locale for batch transcription of audio
LOCALE=en-US

#######################
# Input/Output Configuration
#######################

# Input audio URL or path
INPUT_URL=https://example.com/audio.wav

# Output file for phrase list and conversation summary
OUTPUT_FILE=evals/output.txt

# Use stereo audio format (true/false)
USE_STEREO=false
